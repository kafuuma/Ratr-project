version: '3'

services:
  database:
    image: postgres:10.0

    restart: always
    expose:
      - '5431'
    environment:
      - POSTGRES_USER=ratr
      - POSTGRES_PASSWORD=ratr
      - POSTGRES_DB=ratr
    healthcheck:
      test: ['CMD-SHELL', 'pg_isready -U postgres']
      interval: 5s
      timeout: 10s
      retries: 5

  test:
    build:
      context: ../../
      dockerfile: docker/test/Dockerfile
    env_file:
      - test.env
    depends_on:
      - database



